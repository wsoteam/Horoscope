<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_stars">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="Match"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivOwnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_back_match"
                android:src="@drawable/img_sign_test"
                android:padding="18dp"/>

            <TextView
                android:id="@+id/tvOwnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#99FFFFFF"
                tools:text="Pisces"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_match"
            android:layout_marginTop="22dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivMatchSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_match_back_sign"
                android:src="@drawable/img_heart_match"
                android:padding="18dp"/>

            <TextView
                android:id="@+id/tvMatchSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#99FFFFFF"
                android:text="@string/select_sign"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>
    </LinearLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlType"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="1dp"
            app:tabMaxWidth="50dp"
            app:tabIndicatorColor="#bd84fd"
            app:tabMode="auto"
            app:tabRippleColor="@color/transparent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiSigns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/tab_signs" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/tab_date" />

        </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:background="#33FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvSigns"/>





</LinearLayout>