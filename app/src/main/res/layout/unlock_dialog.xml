<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#2c2839"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ivOwnSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_back_match"
                        android:padding="18dp"
                        android:src="@drawable/img_sign_test" />

                    <TextView
                        android:id="@+id/tvOwnSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/muller_medium"
                        android:textColor="#99FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        tools:text="Pisces" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/ic_plus_match" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ivMatchSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_match_back_sign"
                        android:padding="18dp"
                        android:src="@drawable/img_heart_match" />

                    <TextView
                        android:id="@+id/tvMatchSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/muller_medium"
                        android:text="@string/select_sign"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>
            </LinearLayout>



            <Button
                android:id="@+id/btnShowAd"
                android:layout_width="194dp"
                android:layout_height="28dp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#1a072f"
                android:text="@string/read_once"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_play_ad"
                android:drawablePadding="48dp"
                android:paddingEnd="72dp"
                android:paddingStart="11dp"
                android:background="@drawable/selector_button_start_onboard"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>


            <Button
                android:id="@+id/btnPrem"
                android:layout_width="194dp"
                android:layout_height="28dp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:text="@string/unlock_forever"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingEnd="62dp"
                android:paddingStart="62dp"
                android:background="@drawable/shape_btn_unlock"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>





        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>