<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_violet">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/rvTypes"/>

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#14ffffff"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:text="@string/the_effect_of_the_amethyst_crystal_will_expire_in"
        />

    <TextView
        android:id="@+id/tvCountdownCrystal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="4.6sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        tools:text="24 часа"
        android:drawableStart="@drawable/ic_countdown_crystal"
        android:drawablePadding="8dp"
        />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPrevCrystal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_crystal_prev_active"
            android:padding="16dp"/>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpCrystals"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/ivNextCrystal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_crystal_next_active"
            android:padding="16dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvVpNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="3.7sp"
        android:layout_gravity="center_horizontal"
        tools:text="1/2"
        android:layout_marginTop="14dp"
        />




</LinearLayout>


    <Button
        android:id="@+id/btnChargeCrystal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="74dp"
        android:background="@drawable/shape_charge_crystal"
        android:drawableStart="@drawable/ic_charge_crystal"
        android:drawablePadding="8dp"
        android:fontFamily="@font/open_sans_regular"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2sp"
        android:paddingStart="28dp"
        android:paddingTop="13dp"
        android:paddingEnd="28dp"
        android:paddingBottom="13dp"
        android:text="@string/charge"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="21dp" />


    <FrameLayout
        android:id="@+id/llShop"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_crystal_bottom_gradient">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#2e2c5c"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4.6sp"
            android:text="@string/select_crystals"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_crystals_shop"
            android:drawablePadding="16dp"
            android:layout_marginStart="16dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_play_shop"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"/>

    </FrameLayout>

</FrameLayout>