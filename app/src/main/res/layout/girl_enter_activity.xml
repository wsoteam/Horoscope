<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_close_onboard_girl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4f4e73"
        android:letterSpacing="0.33"
        android:lineSpacingExtra="0.7sp"
        android:gravity="center_horizontal"
        android:text="horoscope"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#2e2c5c"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="1sp"
        android:gravity="center_horizontal"
        android:text="Astropedia "
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_onboard_girl"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"/>

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#de000000"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="1sp"
        android:gravity="center_horizontal"
        android:text="Accurate forecasts for every day"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        />



    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/open_sans_regular"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:drawablePadding="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/shape_btn_buy_onboard_girl"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2sp"
        android:drawableEnd="@drawable/ic_arrow_onboard_diamond"
        android:text="continue" />
</LinearLayout>