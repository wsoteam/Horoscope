<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_astro_woman"
                    android:id="@+id/ivBack"
                    android:padding="16dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_astro_woman"
                    android:layout_gravity="end"
                    android:id="@+id/ivClose"
                    android:visibility="gone"
                    android:padding="16dp"/>

            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="#1e1e1e"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal"
                android:text="What is needed for this?"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:id="@+id/tvFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1e1e1e"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:gravity="center_vertical"
                android:text="Register on the astrologers website"
                android:drawableStart="@drawable/ic_yel_reg_1"
                android:drawablePadding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="59dp"
                />


            <TextView
                android:id="@+id/tvSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1e1e1e"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:gravity="center_vertical"
                android:text="Choose the right astrologer"
                android:drawableStart="@drawable/ic_yel_choose_2"
                android:drawablePadding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="29dp"
                />


            <TextView
                android:id="@+id/tvThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1e1e1e"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:gravity="center_vertical"
                android:text="Ask him a question"
                android:drawableStart="@drawable/ic_yel_ask_3"
                android:drawablePadding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="29dp"
                />


            <TextView
                android:id="@+id/tvFirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1e1e1e"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:gravity="center_vertical"
                android:text="Get an answer to your question"
                android:drawableStart="@drawable/ic_yel_answer_4"
                android:drawablePadding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="29dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="2sp"
                android:text="Try Now"
                android:background="@drawable/shape_btn_orange_astro"
                android:paddingBottom="16dp"
                android:paddingEnd="43dp"
                android:paddingStart="43dp"
                android:paddingTop="16dp"
                android:id="@+id/btnTryNow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="84dp"
                android:layout_marginBottom="69dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back_astro_list"
            android:scaleType="fitXY"/>
    </FrameLayout>
</ScrollView>