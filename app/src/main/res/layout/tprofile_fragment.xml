<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/muller"
        android:text="Settings"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="42dp"
        android:textColorHint="#99FFFFFF"
        app:errorTextAppearance="@style/TextInputStyle.Error"
        app:hintTextAppearance="@style/Profile.Hint">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:theme="@style/ProfileTheme"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:fontFamily="@font/muller_medium"
            android:textStyle="normal"
            android:textColor="#DEFFFFFF"
            android:hint="@string/name"
            android:backgroundTint="#66FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:inputType="textCapSentences"
            android:maxLength="30"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:text="Relationship"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_back_profile">

        <FrameLayout
            android:id="@+id/flSingle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_profile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Single"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_single"
                android:drawablePadding="6dp"
                />

        </FrameLayout>



        <FrameLayout
            android:id="@+id/flInLove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_profile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="In Love"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_in_love"
                android:drawablePadding="6dp"

                />

        </FrameLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:text="Gender"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_back_profile">

        <FrameLayout
            android:id="@+id/flMale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_profile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Male"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_male_prof"
                android:drawablePadding="8dp"
                />

        </FrameLayout>



        <FrameLayout
            android:id="@+id/flFemale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_profile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Female"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_female_prof"
                android:drawablePadding="8dp"
                />

        </FrameLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnChoiceSign"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/muller_medium"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#2a0762"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Change my sign"
        android:background="@drawable/shape_button_start"/>

    <TextView
        android:id="@+id/tvPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:textStyle="normal"
        android:textSize="8sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Terms of use and Privacy Policy"
        android:layout_marginTop="42dp"
        />


</LinearLayout>