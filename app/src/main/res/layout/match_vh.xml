<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/open_sans_semibold"
            android:textStyle="normal"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="4sp"
            android:text="@string/today_apos_s_matches"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="3.7sp"
                        android:id="@+id/tvLoveLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/love"
                        android:textColor="#ffffff" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLove"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        tools:srcCompat="@drawable/ic_aries_matches" />

                    <TextView
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="3.7sp"
                        android:id="@+id/tvLove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffffff"
                        tools:text="Aries" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="3.7sp"
                        android:id="@+id/tvFriendLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/friendship"
                        android:textColor="#ffffff" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFriend"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        tools:srcCompat="@drawable/ic_aries_matches" />

                    <TextView
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="3.7sp"
                        android:id="@+id/tvFriend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffffff"
                        tools:text="Aries" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="3.7sp"
                        android:id="@+id/tvCareerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/career"
                        android:textColor="#ffffff" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCareer"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        tools:srcCompat="@drawable/ic_aries_matches" />

                    <TextView
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="3.7sp"
                        android:id="@+id/tvCareer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffffff"
                        tools:text="Aries" />

                </LinearLayout>


            </TableRow>


        </TableLayout>

        <View
            android:id="@+id/dvdMatch"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="22dp"
            android:background="#14ffffff" />

    </LinearLayout>
</FrameLayout>