<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_violet"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="4.6sp"
                android:text="@string/the_effect_of_the_amethyst_crystal_will_expire_in_30_minutes"
                android:layout_marginTop="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4.9sp"
                android:text="@string/manage_to_en"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="19dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@drawable/img_end_crystal"/>

            <TextView
                android:id="@+id/tvOkEndCrystal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/ok"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="54dp"
                android:paddingEnd="54dp"
                android:layout_marginTop="21dp"
                android:textAllCaps="true"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>