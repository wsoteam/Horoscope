<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.06"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="5.7sp"
            android:text="@string/premium"
            android:textColor="#2e2c5c"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            app:srcCompat="@drawable/img_diamond" />


        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="37dp"
            android:background="#2e2c5c" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:drawableStart="@drawable/ic_tick_white_theme"
                android:drawablePadding="8dp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center_vertical"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:text="No advertising"
                android:textColor="#1e1e1e"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/btnPay"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:drawableStart="@drawable/ic_tick_white_theme"
                android:drawablePadding="8dp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center_vertical"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:text="Full access to horoscopes"
                android:textColor="#1e1e1e"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:drawableStart="@drawable/ic_tick_white_theme"
                android:drawablePadding="8dp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center_vertical"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:text="Daily notifications of recent horoscopes"
                android:textColor="#1e1e1e"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="49dp"
                android:background="@drawable/shape_lock_prem"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4.6sp"
                android:paddingStart="67dp"
                android:paddingTop="12dp"
                android:paddingEnd="67dp"
                android:paddingBottom="12dp"
                android:text="@string/try_free_trial"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="83dp"
                android:gravity="center_horizontal"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:textColor="#8e8e8e"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btnPay"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="@+id/btnPay"
                app:layout_constraintTop_toBottomOf="@+id/btnPay"
                tools:text="3 days trial period. Next 0$ per month" />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>
</ScrollView>