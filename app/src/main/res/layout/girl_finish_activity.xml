<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_close_onboard_girl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#4f4e73"
            android:letterSpacing="0.33"
            android:lineSpacingExtra="0.7sp"
            android:gravity="center_horizontal"
            android:text="horoscope"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#2e2c5c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="1sp"
            android:gravity="center_horizontal"
            android:text="Astropedia "
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_onboard_girl"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#de000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="1sp"
            android:gravity="center_horizontal"
            android:text="Accurate forecasts for every day"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#380c0c0c"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="142dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center_horizontal"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="5.1sp"
                android:text="Free offer"
                android:textColor="#de000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_tick_finish"
                android:drawablePadding="11dp"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:text="No advertising"
                android:textColor="#de000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_tick_finish"
                android:drawablePadding="11dp"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:text="Full access to horoscopes"
                android:textColor="#de000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_tick_finish"
                android:drawablePadding="11dp"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:text="Daily notifications of recent horoscopes"
                android:textColor="#de000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="2sp"
                android:text="Try for free"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:background="@drawable/shape_button_enter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>