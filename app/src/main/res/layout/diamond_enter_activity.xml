<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2c5c">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2e2c5c"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_close_enter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_horizontal"
            android:letterSpacing="0.33"
            android:lineSpacingExtra="0.7sp"
            android:text="horoscope"
            android:textColor="#c0ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="1sp"
            android:text="Astropedia "
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            app:srcCompat="@drawable/img_crystal_diamond" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/open_sans_regular"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="1sp"
            android:text="Find out what awaits you tomorrow"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="normal" />


        <Button
            android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/shape_button_enter"
            android:drawableEnd="@drawable/ic_arrow_onboard_diamond"
            android:drawablePadding="8dp"
            android:fontFamily="@font/open_sans_regular"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="2sp"
            android:paddingStart="28dp"
            android:paddingTop="12dp"
            android:paddingEnd="28dp"
            android:paddingBottom="12dp"
            android:text="continue"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>