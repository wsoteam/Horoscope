<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="@string/my_horoscope"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        
        <ImageView
            android:id="@+id/ivSign"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="27dp"
            tools:background="@drawable/img_onboard_aries"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="16dp">


            <TextView
                android:id="@+id/tvSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muller_medium"
                android:textStyle="normal"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_marginTop="17dp"
                tools:text="Pisces"
                />

            <TextView
                android:id="@+id/tvInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muller"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#b1b1b1"
                tools:text="feb 19 â€” mar 20"
                android:layout_marginTop="12dp"
                />

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/muller_bold"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#1a072f"
                android:text="@string/about"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/selector_s_aries"
                android:paddingEnd="21dp"
                android:paddingStart="16dp"
                android:background="@drawable/selector_button_start_onboard"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <Button
                android:id="@+id/btnMatch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/muller_bold"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#1a072f"
                android:text="@string/match"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_heart_match_horo"
                android:paddingEnd="21dp"
                android:paddingStart="16dp"
                android:background="@drawable/selector_button_start_onboard"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>


        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlType"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:tabIndicatorColor="#bd84fd"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="1dp"
        app:tabMode="auto"
        app:tabPaddingStart="45dp"
        app:tabPaddingEnd="45dp"
        app:tabRippleColor="@color/transparent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/tab_today" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiMonthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/tab_monthly" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tiYearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/tab_yearly" />

    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:background="#33FFFFFF" />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vpHoro"/>

</LinearLayout>