<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muller_medium"
            android:textStyle="normal"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:text="@string/your_gender"
            android:layout_marginTop="106dp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">


            <LinearLayout
                android:id="@+id/llMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_gender"
                    android:src="@drawable/selector_gender_male"
                    android:enabled="true"
                    android:padding="25dp"/>


                <TextView
                    android:id="@+id/tvMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muller_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="@color/selector_gender"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/male_gender"
                    tools:textColor="@color/white"
                    android:enabled="true"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_gender"
                    android:src="@drawable/selector_gender_female"
                    android:enabled="false"
                    android:padding="25dp"/>


                <TextView
                    android:id="@+id/tvFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muller_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="@color/selector_gender"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/female_gen"
                    android:enabled="false"
                    tools:textColor="@color/white"
                    />


            </LinearLayout>






        </LinearLayout>



    </LinearLayout>

</FrameLayout>